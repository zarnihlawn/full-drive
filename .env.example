# Drizzle (use same user/password/db as POSTGRES_* for local Docker)
DATABASE_URL="postgres://user:password@localhost:5432/local"

ORIGIN=""

# Better Auth
# For production use 32 characters and generated with high entropy
# https://www.better-auth.com/docs/installation
BETTER_AUTH_SECRET=""
# GitHub OAuth
# https://www.better-auth.com/docs/authentication/github
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Argon2 password hashing (optional overrides)
ARGON2_MEMORY_COST=
ARGON2_TIME_COST=
ARGON2_PARALLELISM=
ARGON2_HASH_LENGTH=

# Mailing Information (required for email OTP verification)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
# Optional: from address (defaults to SMTP_USER)
# SMTP_FROM=pnp