{
	"name": "full-drive",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run paraglide && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"paraglide": "paraglide-js compile --outdir ./src/lib/paraglide",
		"paraglide:watch": "paraglide-js compile --watch --outdir ./src/lib/paraglide",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"auth:schema": "npx @better-auth/cli generate --config src/lib/server/auth.ts --output src/lib/server/db/auth.schema.ts --yes",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"changeset:init": "changeset init"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.1",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@inlang/paraglide-js": "^2.10.0",
		"@playwright/test": "^1.58.1",
		"@storybook/addon-a11y": "^10.2.8",
		"@storybook/addon-docs": "^10.2.8",
		"@storybook/addon-svelte-csf": "^5.0.11",
		"@storybook/addon-vitest": "^10.2.8",
		"@storybook/sveltekit": "^10.2.8",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^24",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"better-auth": "^1.4.18",
		"daisyui": "^5.5.18",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.2.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.58.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"storybook": "^10.2.8",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2"
	},
	"dependencies": {
		"@changesets/cli": "^2.29.8",
		"argon2": "^0.44.0",
		"cally": "^0.9.1",
		"nodemailer": "^8.0.0",
		"postgres": "^3.4.8",
		"uuidv7": "^1.1.0",
		"zod": "^4.3.6"
	}
}